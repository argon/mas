#!/bin/bash -ex
#
# script/bottle
# mas
#
# Builds bottles of Homebrew formula.
#

mkdir -p build
pushd build

brew install \
    --build-bottle \
    --force \
    mas

brew bottle \
    --verbose \
    --no-rebuild \
    --root-url=https://dl.bintray.com/phatblat/mas-bottles \
    mas

popd build
